<configuration>
<!--   <consolePlugin />-->
  
  <appender name="S" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss} %5p %c{50}:%4L - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="com.tosan" level="DEBUG"/>
  <logger name="org.springframework.integration" level="DEBUG" />
	  
  <root level="ERROR">
    <appender-ref ref="S"/>
  </root>
</configuration>
